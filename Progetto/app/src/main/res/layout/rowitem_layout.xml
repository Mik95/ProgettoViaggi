        android:text="indirizzo " />

    <TextView
        android:id="@+id/citaH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/indirizzoH3"
        android:layout_below="@+id/indirizzoH3"
        android:layout_marginTop="12dp"
        android:text="città " />

    <ImageView
        android:id="@+id/imH2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imH1"
        android:layout_below="@+id/imH1"
        android:layout_marginTop="41dp"
        android:src="@mipmap/camera" />

    <ImageView
        android:id="@+id/imH3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imH2"
        android:layout_below="@+id/imH2"
        android:layout_marginTop="40dp"
        android:src="@mipmap/albergopiscina" />
