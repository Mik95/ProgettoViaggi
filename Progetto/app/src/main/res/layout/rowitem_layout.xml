    <TextView
        android:id="@+id/indirizzoH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/citaH1"
        android:layout_below="@+id/hotel2"
        android:layout_marginTop="11dp"
        android:text="indirizzo " />

    <TextView
        android:id="@+id/citaH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/indirizzo1"
        android:layout_below="@+id/indirizzo1"
