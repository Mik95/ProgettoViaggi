<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    tools:context="applicazione.progetto.travelplan.Fragment.RegistrationFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="128dp"
        android:text="Nome" />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_alignBottom="@id/textView4"
        android:ems="10"
        android:hint="Inserire nome"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/etNome"
        android:layout_marginTop="20dp"
        android:text="Cognome" />

    <EditText
        android:id="@+id/etCognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginLeft="120dp"
        android:ems="10"
        android:hint="Inserire cognome"
        android:inputType="textPersonName" />



    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="39dp"
        android:text="Email" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_alignBottom="@id/textView9"
        android:layout_below="@id/etCognome"
        android:ems="10"
        android:hint="example@libero.it"
        android:inputType="textEmailAddress" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="27dp"
        android:text="Password" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/etEmail"
        android:ems="10"
        android:hint="Inserire password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvNonCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnConferma"
        android:layout_toEndOf="@+id/textView4"
        android:text="Completa tutti i campi!"
        android:visibility="invisible"
        android:inputType=""/>

    <Button
        android:id="@+id/btnConferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etPass"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:text="Conferma" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/tvCheckPass"
        android:layout_marginTop="23dp"
        android:visibility="invisible"
        android:text="Qualche campo non Ã¨ completo!"
        />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@id/textView11"
        android:layout_marginTop="25dp"
        android:text="Conferma Password" />

    <EditText
        android:id="@+id/etConfermaPass"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnConferma"
        android:layout_alignStart="@+id/etNome"
        android:layout_alignBottom="@id/textView14"
        android:ems="10"
        android:hint="Inserire password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvCheckPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnConferma"
        android:layout_alignStart="@+id/textView6"
        android:text="Le password non corrispondono!"
        android:visibility="invisible" />



</RelativeLayout>
