<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="applicazione.progetto.travelplan.Registration">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Nome" />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"

        android:layout_alignBottom="@id/textView4"
        android:ems="10"
        android:hint="Inserire nome"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/etNome"
        android:layout_marginTop="20dp"
        android:text="Cognome" />

    <EditText
        android:id="@+id/etCognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginLeft="120dp"
        android:ems="10"
        android:hint="Inserire cognome"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_below="@+id/etCognome"
        android:layout_marginTop="29dp"
        android:text="Sesso" />

    <RadioButton
        android:id="@+id/radioFemmina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/textView8"
        android:onClick="onRadioButtonClicked"
        android:text="F" />

    <RadioButton
        android:id="@+id/radioMaschio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioFemmina"
        android:layout_alignBottom="@+id/radioFemmina"
        android:layout_alignStart="@+id/btnConferma"
        android:onClick="onRadioButtonClicked"
        android:text="M" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/radioFemmina"
        android:layout_marginTop="31dp"
        android:text="Data di nascita" />

    <EditText
        android:id="@+id/etData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/etEmail"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="date"
        android:maxLength="10" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/etData"
        android:layout_marginTop="37dp"
        android:text="Email" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView10"

        android:layout_marginLeft="120dp"
        android:ems="10"
        android:hint="example@libero.it"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="34dp"
        android:text="Username" />

    <EditText
        android:id="@+id/etUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_marginLeft="120dp"
        android:ems="10"
        android:hint="Inserire Username"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="27dp"
        android:text="Password" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/etUser"
        android:ems="10"
        android:hint="Inserire password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvNonCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnConferma"
        android:layout_toEndOf="@+id/textView4"
        android:text="Completa tutti i campi!"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnConferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etPass"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:text="Conferma" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnConferma"
        android:layout_below="@+id/tvNonCompleto"
        android:layout_marginTop="23dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@id/textView11"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Conferma Password" />

    <EditText
        android:id="@+id/etConfermaPass"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnConferma"
        android:layout_alignStart="@+id/etNome"
        android:layout_alignBottom="@id/textView14"
        android:ems="10"
        android:hint="Inserire password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvCheckPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnConferma"
        android:layout_alignStart="@+id/textView8"
        android:text="Le password non corrispondono!"
        android:visibility="invisible" />



</RelativeLayout>
